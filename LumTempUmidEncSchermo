#include <SimpleDHT.h>
#include <Arduino.h>
#include <U8g2lib.h>
#include <Encoder.h>

#ifdef U8X8_HAVE_HW_SPI
#include <SPI.h>
#endif
#ifdef U8X8_HAVE_HW_I2C
#include <Wire.h>
#endif

U8G2_ST7920_128X64_F_SW_SPI u8g2(U8G2_R0, /* clock=*/ 13, /* data=*/ 11, /* CS=*/ 10, /* reset=*/ 8);

#define INFO_SCREEN_DELAY 3000

uint8_t z = 127;	// start value
uint32_t lcg_rnd(void) {
  z = (uint8_t)((uint16_t)65*(uint16_t)z + (uint16_t)17);
  return (uint32_t)z;
}

int pinDHT11 = 7;
SimpleDHT11 dht11(pinDHT11);
Encoder enc(2, 3);

void setup() {
  // put your setup code here, to run once:
  Serial.begin(9600);
  u8g2.begin();
  pinMode(4, INPUT_PULLUP);
}

 long oldpos = -1;

void loop() {
  // put your main code here, to run repeatedly:
  //VARIABILI
  int v=analogRead(A0);
  long pos = enc.read();
  byte temperature = 0;
  byte humidity = 0;
  int err = SimpleDHTErrSuccess;

  
  



  if ((err = dht11.read(&temperature, &humidity, NULL)) != SimpleDHTErrSuccess) {
    Serial.print("Read DHT11 failed, err="); Serial.print(SimpleDHTErrCode(err));
    Serial.print(","); Serial.println(SimpleDHTErrDuration(err)); delay(1000);
    return;
  }
  v=map(v,0,1000,100,0);
  
  //TYPE CASTING
  int t = (int)temperature;
  int u = (int)humidity;
  
  
  //OUTPUT VARIABILI


  u8g2.clearBuffer();					// clear the internal memory
  //u8g2.setFont(u8g2_font_ncenB08_tr);	// choose a suitable font
  u8g2.setFont(u8g2_font_amstrad_cpc_extended_8r);
  u8g2.setCursor(0,8);				// set write position
  u8g2.println((String)"temp: "+ t +"Â°C");
  u8g2.setCursor(0,16);		
  u8g2.println((String)"lum: "+ v +"%");	
  u8g2.setCursor(0,24);
  u8g2.println((String)"umid: "+ u +"%");		// write something to the internal memory
  //if (pos != oldpos){
    u8g2.setCursor(0,32);
    u8g2.println(pos);
    oldpos=pos;
  //}
  if(!digitalRead(4)){
    u8g2.setCursor(0,40);
    u8g2.println("ok");
  }


  u8g2.sendBuffer();					// transfer internal memory to the display


  delay(150);
}
